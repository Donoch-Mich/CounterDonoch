<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Counter.Controls"
             x:Class="Counter.MainPage">

    
    <ScrollView>
        <StackLayout Padding="10">
            <Entry x:Name="CounterNameEntry" Placeholder="Wprowadź nazwę licznika" />
            <Entry x:Name="CounterValueEntry" Placeholder="Wprowadź wartość początkową" Keyboard="Numeric" />
            <Button Text="Add Counter" Clicked="addCounterName_Clicked" />
            <StackLayout x:Name="Controls">
                
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
